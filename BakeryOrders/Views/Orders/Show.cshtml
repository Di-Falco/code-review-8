<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Vendor Orders</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
    @using BakeryOrders.Models
    <h1>Vendor Orders:</h1>

    <h2>@Model["vendor"].Name</h2>
    <h5>Order:</h5>
    <ol>
      @foreach (Order order in Model["vendor"]) {
        <li>
          @Model["orders"].Title<br>
          @Model["orders"].Description<br>
          @Model["orders"].Date
        </li>
      }
    </ol>

    <a href='/categories/@Model["category"].Id/items/new'>Add another item</a>
    <a href='/categories'>View all items</a>
  </body>
</html>