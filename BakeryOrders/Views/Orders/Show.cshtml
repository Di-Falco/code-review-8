<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Vendor Orders</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
    @using BakeryOrders.Models
    <h1>Order Info</h1>
    <h2>@Model["order"].Title</h2>
    <p>@Model["order"].Description</p>
    <h5>Items:</h5>
    @if(@Model["items"].Count == 0){
      <h4>There are no items for this order</h4>
    }
    <ol>
    @foreach (Item item in Model["items"]) {
        <li><strong>@item.Name</strong><br>
            @item.Quantity<br>
            @item.Buy()</li>
    }
    </ol>
    <a href='/vendors/@Model["vendor"].Id/order/@Model["order"].Id/items/complete'><button>Complete this order</button></a>
    <a href='/vendors/@Model["vendor"].Id/orders'><button>View all orders</button></a>
  </body>
</html>