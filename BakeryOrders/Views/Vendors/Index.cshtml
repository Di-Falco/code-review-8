@{
  Layout = "_Layout";
}
<div class="container">
@using BakeryOrders.Models;
<h1>Vendors</h1>
@if (@Model.Count == 0) {
  <h3>There are currently no vendors</h3>
}
@foreach (Vendor vendor in Model) {
  <h3>@vendor.Name</h3>
  <a href="/vendors/@vendor.Id/orders"><button>View Orders for @vendor.Name</button></a>
}
<br><br>
<a href="/vendors/new"><button>Add New Vendor</button></a>
<a href="/"><button>Return Home</button></a>
</div>