<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>My To-Do List!</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
  <div class="container">
    @using BakeryOrders.Models;
    <h1>Vendors</h1>
    @if (@Model.Count == 0) {
      <h3>There are currently no vendors</h3>
    }
    @foreach (Vendor vendor in Model) {
      <h3>@vendor.Name</h3>
      <a href="/vendors/@vendor.Id"><button>View Orders for @vendor.Name</button></a>
    }
    <a href="/vendors/new"><button>Add New Vendor</button></a>
    <a href="/"><button>Return Home</button></a>
  </div>
  </body>
</html>